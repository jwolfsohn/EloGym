<div class="min-h-screen flex items-center justify-center px-4 relative">
  <%# Background %>
  <div class="absolute inset-0 bg-gradient-mesh opacity-20"></div>

  <div class="max-w-md w-full relative z-10 animate-slide-up">
    <div class="text-center mb-10">
      <h1 class="text-5xl font-display mb-2">Calibration</h1>
      <p class="text-gray-400">Initialize your physical profile</p>
    </div>

    <div class="bg-steel/80 backdrop-blur-xl border border-white/10 rounded-3xl p-8 shadow-2xl">
      <%= form_with url: "/onboarding/save_stats", method: :post, class: "space-y-8", local: true do |f| %>
        <div class="space-y-4">
          <label class="block text-sm font-medium text-gray-300 uppercase tracking-widest text-center">
            Current Bodyweight
          </label>
          
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
               <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
              </svg>
            </div>
            <%= f.number_field :bodyweight,
              step: 0.1,
              min: 50,
              max: 500,
              required: true,
              class: "block w-full text-center text-5xl font-display bg-transparent border-0 border-b-2 border-white/20 focus:border-neon-lime focus:ring-0 text-white placeholder-white/20 transition-all duration-300 py-4",
              placeholder: "0.0" %>
            <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
              <span class="text-gray-500 font-display text-xl">LBS</span>
            </div>
          </div>
          
          <p class="text-xs text-center text-gray-500">
            Used to calculate relative strength benchmarks based on your rank.
          </p>
        </div>

        <div class="bg-deep-black/30 rounded-2xl p-6 border border-white/5">
          <div class="flex gap-4">
             <div class="w-10 h-10 rounded-full bg-neon-lime/10 flex-shrink-0 flex items-center justify-center text-neon-lime">
               <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" /></svg>
             </div>
             <div>
               <h3 class="font-bold text-white text-sm mb-1">Dynamic Scaling</h3>
               <p class="text-xs text-gray-400 leading-relaxed">
                 Your target weights will automatically adjust as you log workouts and rank up from <span class="text-neon-lime">E-Rank</span> to <span class="text-electric">S-Rank</span>.
               </p>
             </div>
          </div>
        </div>

        <%= f.submit "COMPLETE CALIBRATION", class: "w-full btn-primary py-4 text-lg font-bold tracking-widest rounded-xl shadow-lg shadow-neon-lime/20 hover:shadow-neon-lime/40 transition-all duration-300" %>
      <% end %>
    </div>

    <div class="text-center mt-8">
      <%= link_to dashboard_path, class: "text-sm text-gray-500 hover:text-white transition-colors group flex items-center justify-center gap-2" do %>
        <span>Skip configuration for now</span>
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
      <% end %>
    </div>
  </div>
</div>
