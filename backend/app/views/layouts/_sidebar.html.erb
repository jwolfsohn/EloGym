<aside class="w-64 bg-midnight border-r border-white/5 flex flex-col fixed h-full z-50">
  <div class="p-6">
    <h1 class="font-display text-4xl text-transparent bg-clip-text bg-gradient-to-r from-electric to-neon-lime tracking-wider">
      ELOGYM
    </h1>
    <p class="text-xs text-gray-400 mt-1 uppercase tracking-[0.2em]">Become Legend</p>
  </div>

  <nav class="flex-1 px-4 space-y-2 mt-8">
    <%= link_to dashboard_path, class: "flex items-center gap-4 px-4 py-3 rounded-xl transition-all duration-200 group #{current_page?(dashboard_path) ? 'bg-white/10 text-white' : 'text-gray-400 hover:bg-white/5 hover:text-white'}" do %>
      <div class="p-2 rounded-lg bg-gradient-to-br from-electric/20 to-transparent group-hover:from-electric/40 transition-all">
        <svg class="w-5 h-5 text-electric" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2a2 2 0 012 2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
        </svg>
      </div>
      <span class="font-medium">Dashboard</span>
    <% end %>

    <a href="#" class="flex items-center gap-4 px-4 py-3 rounded-xl text-gray-400 hover:bg-white/5 hover:text-white transition-all duration-200 group">
      <div class="p-2 rounded-lg bg-gradient-to-br from-neon-lime/20 to-transparent group-hover:from-neon-lime/40 transition-all">
        <svg class="w-5 h-5 text-neon-lime" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
        </svg>
      </div>
      <span class="font-medium">Workouts</span>
    </a>

    <a href="#" class="flex items-center gap-4 px-4 py-3 rounded-xl text-gray-400 hover:bg-white/5 hover:text-white transition-all duration-200 group">
      <div class="p-2 rounded-lg bg-gradient-to-br from-energy-orange/20 to-transparent group-hover:from-energy-orange/40 transition-all">
        <svg class="w-5 h-5 text-energy-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
        </svg>
      </div>
      <span class="font-medium">Profile</span>
    </a>
  </nav>

  <div class="p-4 border-t border-white/5">
    <%= button_to logout_path, method: :delete, class: "flex items-center gap-3 w-full px-4 py-3 text-left text-gray-400 hover:text-white transition-colors rounded-xl hover:bg-red-500/10 group" do %>
      <svg class="w-5 h-5 group-hover:text-red-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
      </svg>
      <span class="font-medium">Logout</span>
    <% end %>
  </div>
</aside>

<!-- Spacer for fixed sidebar -->
<div class="w-64 hidden md:block"></div>
