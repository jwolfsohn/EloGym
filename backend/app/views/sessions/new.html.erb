<div class="min-h-screen flex items-center justify-center px-4">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="text-5xl font-bold mb-2 bg-gradient-to-r from-brand-purple to-pink-500 bg-clip-text text-transparent">
        EloGym
      </h1>
      <p class="text-xl text-gray-400">Login to your account</p>
    </div>

    <div class="card">
      <%= form_with url: login_path, method: :post, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium mb-2" %>
          <%= f.email_field :email,
            required: true,
            autofocus: true,
            autocomplete: "email",
            class: "input-field w-full",
            placeholder: "your@email.com" %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium mb-2" %>
          <%= f.password_field :password,
            required: true,
            autocomplete: "current-password",
            class: "input-field w-full",
            placeholder: "••••••••" %>
        </div>

        <%= f.submit "Login", class: "btn-primary w-full text-lg py-3" %>
      <% end %>
    </div>

    <div class="text-center mt-6">
      <p class="text-gray-400">
        Don't have an account?
        <%= link_to "Sign up", signup_path, class: "text-brand-purple hover:text-purple-400 font-semibold transition-colors" %>
      </p>
    </div>

    <!-- Demo credentials -->
    <div class="card-glass mt-6">
      <p class="text-sm font-semibold text-brand-purple mb-2">Demo Account:</p>
      <p class="text-sm text-gray-400">Email: demo@elogym.com</p>
      <p class="text-sm text-gray-400">Password: password123</p>
    </div>
  </div>
</div>
