<div class="min-h-screen flex items-center justify-center px-4 py-8">
  <div class="max-w-md w-full">
    <div class="text-center mb-8">
      <h1 class="text-5xl font-bold mb-2 bg-gradient-to-r from-brand-purple to-pink-500 bg-clip-text text-transparent">
        EloGym
      </h1>
      <p class="text-xl text-gray-400">Create your account</p>
    </div>

    <div class="card">
      <%= form_with model: @user, url: signup_path, class: "space-y-6" do |f| %>
        <div>
          <%= f.label :username, "Username", class: "block text-sm font-medium mb-2" %>
          <%= f.text_field :username,
            required: true,
            autofocus: true,
            class: "input-field w-full",
            placeholder: "Choose a username" %>
          <% if @user.errors[:username].any? %>
            <p class="text-red-400 text-sm mt-1"><%= @user.errors[:username].first %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-medium mb-2" %>
          <%= f.email_field :email,
            required: true,
            autocomplete: "email",
            class: "input-field w-full",
            placeholder: "your@email.com" %>
          <% if @user.errors[:email].any? %>
            <p class="text-red-400 text-sm mt-1"><%= @user.errors[:email].first %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-medium mb-2" %>
          <%= f.password_field :password,
            required: true,
            autocomplete: "new-password",
            class: "input-field w-full",
            placeholder: "••••••••" %>
          <p class="text-xs text-gray-400 mt-1">Minimum 6 characters</p>
          <% if @user.errors[:password].any? %>
            <p class="text-red-400 text-sm mt-1"><%= @user.errors[:password].first %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium mb-2" %>
          <%= f.password_field :password_confirmation,
            required: true,
            autocomplete: "new-password",
            class: "input-field w-full",
            placeholder: "••••••••" %>
        </div>

        <%= f.submit "Create Account", class: "btn-primary w-full text-lg py-3" %>
      <% end %>
    </div>

    <div class="text-center mt-6">
      <p class="text-gray-400">
        Already have an account?
        <%= link_to "Login", login_path, class: "text-brand-purple hover:text-purple-400 font-semibold transition-colors" %>
      </p>
    </div>
  </div>
</div>
