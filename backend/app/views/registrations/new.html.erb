<div class="min-h-screen flex items-center justify-center px-4 py-8 relative overflow-hidden">
  <!-- Background Effects -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-1/4 right-1/4 w-96 h-96 bg-neon-lime/40 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 left-1/4 w-96 h-96 bg-electric/30 rounded-full blur-3xl animate-pulse" style="animation-delay: 1.5s;"></div>
  </div>

  <div class="max-w-md w-full relative z-10">
    <div class="text-center mb-10 animate-slide-up">
      <h1 class="heading-xl mb-3">
        ELOGYM
      </h1>
      <div class="h-1 w-24 mx-auto bg-gradient-to-r from-transparent via-neon-lime to-transparent mb-4"></div>
      <p class="text-lg text-gray-300 uppercase tracking-widest font-bold">Join The Arena</p>
    </div>

    <div class="card animate-scale-in" style="animation-delay: 0.2s;">
      <div class="diagonal-accent"></div>

      <%= form_with model: @user, url: signup_path, class: "space-y-5" do |f| %>
        <div>
          <%= f.label :username, "Username", class: "block text-sm font-bold uppercase tracking-wider mb-3 text-electric" %>
          <%= f.text_field :username,
            required: true,
            autofocus: true,
            class: "input-field w-full",
            placeholder: "Choose your fighter name" %>
          <% if @user.errors[:username].any? %>
            <p class="text-energy-orange text-sm mt-2 font-semibold">⚠ <%= @user.errors[:username].first %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :email, "Email", class: "block text-sm font-bold uppercase tracking-wider mb-3 text-electric" %>
          <%= f.email_field :email,
            required: true,
            autocomplete: "email",
            class: "input-field w-full",
            placeholder: "your@email.com" %>
          <% if @user.errors[:email].any? %>
            <p class="text-energy-orange text-sm mt-2 font-semibold">⚠ <%= @user.errors[:email].first %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :password, "Password", class: "block text-sm font-bold uppercase tracking-wider mb-3 text-electric" %>
          <%= f.password_field :password,
            required: true,
            autocomplete: "new-password",
            class: "input-field w-full",
            placeholder: "••••••••" %>
          <p class="text-xs text-gray-400 mt-2 uppercase tracking-wider">Minimum 6 characters</p>
          <% if @user.errors[:password].any? %>
            <p class="text-energy-orange text-sm mt-2 font-semibold">⚠ <%= @user.errors[:password].first %></p>
          <% end %>
        </div>

        <div>
          <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-bold uppercase tracking-wider mb-3 text-electric" %>
          <%= f.password_field :password_confirmation,
            required: true,
            autocomplete: "new-password",
            class: "input-field w-full",
            placeholder: "••••••••" %>
        </div>

        <%= button_tag type: "submit", class: "btn-primary w-full text-lg py-4 mt-6" do %>
          <span>Begin Journey</span>
        <% end %>
      <% end %>
    </div>

    <div class="text-center mt-8 animate-slide-in" style="animation-delay: 0.4s;">
      <p class="text-gray-400">
        Already a challenger?
        <%= link_to login_path, class: "text-neon-lime hover:text-electric font-bold transition-colors uppercase tracking-wider ml-2" do %>
          Login →
        <% end %>
      </p>
    </div>
  </div>
</div>
