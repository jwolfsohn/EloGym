<div class="max-w-4xl mx-auto px-4 pt-8 pb-32">
  <h1 class="text-4xl font-display text-electric text-center tracking-wider mb-8 uppercase">Dashboard</h1>

  <%# Date Navigation Card %>
  <div class="bg-midnight-card rounded-lg p-6 mb-8 border border-white/5">
    <div class="flex items-center gap-2 mb-6">
      <input type="checkbox" id="demo_mode" class="rounded border-white/20 bg-midnight-base text-electric focus:ring-offset-0 focus:ring-0">
      <label for="demo_mode" class="text-sm font-medium text-gray-400">Demo Mode</label>
    </div>

    <div class="flex items-center justify-between gap-4">
      <%= link_to dashboard_path(date: @date - 1.day), class: "btn-primary w-32 py-2 text-xs font-black tracking-widest uppercase text-center rounded bg-electric text-black hover:bg-electric/90" do %>
        Previous Day
      <% end %>

      <span class="text-sm font-medium text-gray-300 min-w-[200px] text-center">
        <%= @date.strftime("%A, %B %d") %>
      </span>

      <%= link_to dashboard_path(date: @date + 1.day), class: "btn-primary w-32 py-2 text-xs font-black tracking-widest uppercase text-center rounded bg-electric text-black hover:bg-electric/90" do %>
        Next Day
      <% end %>
    </div>
  </div>

  <%# Header Info %>
  <div class="flex items-center justify-between mb-8">
    <div>
      <h2 class="text-2xl font-bold mb-2">
        Today's Split: <span class="text-white"><%= @training_day ? @training_day.split.name : "Rest Day" %></span>
      </h2>
      <p class="text-gray-400">Total Points: <%= @user.total_points %></p>
    </div>
    
    <% if @training_day %>
      <button class="btn-primary bg-electric text-black px-6 py-2 rounded text-xs font-black tracking-widest uppercase hover:bg-electric/90 transition-colors">
        Starting Stats
      </button>
    <% end %>
  </div>

  <%# Exercises Grid %>
  <% if @exercises.any? %>
    <div class="grid md:grid-cols-2 gap-4">
      <% @exercises.each do |exercise| %>
        <div class="bg-midnight-card border border-white/10 rounded-lg p-6 relative group">
          <div class="flex items-start justify-between mb-4">
            <h3 class="font-display text-xl tracking-wide uppercase max-w-[70%] leading-tight">
              <%= exercise.name %>
            </h3>
            <% if @completed_today.include?(exercise.id) %>
              <button class="bg-gray-800 text-gray-500 px-4 py-1.5 rounded text-[10px] font-black tracking-widest uppercase cursor-not-allowed">
                Completed
              </button>
            <% else %>
              <%= button_to "Complete", complete_exercise_path(exercise), method: :post, class: "bg-electric text-black px-4 py-1.5 rounded text-[10px] font-black tracking-widest uppercase hover:bg-electric/90 transition-colors" %>
            <% end %>
          </div>

          <div class="space-y-1">
            <p class="text-gray-400 text-sm">3 sets Ã— 8 reps</p> <%# Placeholder data matching screenshot %>
            <p class="text-gray-400 text-sm">Weight: 35 lbs</p>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-midnight-card border border-white/10 rounded-lg p-12 text-center">
      <p class="text-gray-400 mb-4">No exercises scheduled for this day.</p>
      <%= link_to "View User Split", onboarding_split_path, class: "text-electric text-sm font-bold uppercase tracking-wider hover:underline" %>
    </div>
  <% end %>
</div>
