<div class="max-w-2xl mx-auto px-4 pt-8 pb-32">
  <div class="mb-8">
    <%= link_to "← Back to Matchmaking", battles_path, class: "text-electric hover:text-neon-lime transition-colors text-sm font-bold uppercase tracking-wider" %>
  </div>

  <div class="text-center mb-8">
    <h1 class="text-4xl font-display text-electric uppercase tracking-wider mb-4">Battle Challenge</h1>
    <p class="text-white font-bold text-xl mb-2"><span class="text-black font-bold"><%= @battle.challenger.username %></span> has challenged you!</p>
    <p class="text-gray-400">Enter your best stats to compete</p>
  </div>

  <div class="bg-midnight-card border border-white/5 rounded-lg p-8">
    <%= form_with url: submit_response_battle_path(@battle), method: :post, local: true do |f| %>
      <div class="space-y-6">
        <div>
          <%= f.label :bench_press, "Bench Press (lbs)", class: "block text-sm font-bold uppercase tracking-wider mb-3 text-electric" %>
          <%= f.number_field :bench_press, required: true, step: 0.01, class: "input-field w-full", placeholder: "Enter your max bench press" %>
          <p class="text-xs text-gray-400 mt-2 uppercase tracking-wider">Your best 1-rep max</p>
        </div>

        <div>
          <%= f.label :deadlift, "Deadlift (lbs)", class: "block text-sm font-bold uppercase tracking-wider mb-3 text-electric" %>
          <%= f.number_field :deadlift, required: true, step: 0.01, class: "input-field w-full", placeholder: "Enter your max deadlift" %>
          <p class="text-xs text-gray-400 mt-2 uppercase tracking-wider">Your best 1-rep max</p>
        </div>

        <div>
          <%= f.label :pushups, "Pushups (reps)", class: "block text-sm font-bold uppercase tracking-wider mb-3 text-electric" %>
          <%= f.number_field :pushups, required: true, class: "input-field w-full", placeholder: "Enter your max pushups" %>
          <p class="text-xs text-gray-400 mt-2 uppercase tracking-wider">Maximum consecutive reps</p>
        </div>

        <div class="pt-4">
          <%= button_tag type: "submit", class: "btn-primary w-full text-lg py-4" do %>
            <span>Submit & Reveal Results</span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="mt-6 bg-midnight-base border border-energy-orange/20 rounded-lg p-4">
    <p class="text-energy-orange font-bold text-sm mb-2 uppercase tracking-wider">⚠️ Important</p>
    <ul class="text-gray-400 text-sm space-y-1">
      <li>• You cannot see <span class="text-black font-bold"><%= @battle.challenger.username %></span>'s stats until you submit</li>
      <li>• Be honest - this is about testing your true strength!</li>
      <li>• Win 2 out of 3 categories to claim victory</li>
    </ul>
  </div>
</div>
